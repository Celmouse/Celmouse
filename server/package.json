{
  "name": "gyromouse",
  "version": "1.0.0",
  "main": "main.js",
  "license": "ISC",
  "description": "Control your PC from far away",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "watch": "tsc -w -p . ",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": {
    "name": "Marcelo Viana",
    "email": "marcelo.ita.boss@gmail.com",
    "url": "https://github.com/cl0v/"
  },
  "devDependencies": {
    "@types/ws": "^8.5.12",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "ws": "^8.18.0"
  },
  "build": {
    "productName": "GyroMouse",
    "appId": "com.gyromouse.desktop",
    "copyright": "Copyright Â© 2024 Marcelo Viana",
    "forceCodeSigning": true,
    "mac": {
      "target": "mas",
      "type": "distribution",
      "hardenedRuntime": false,
      "category": "public.app-category.utilities",
      "provisioningProfile": "build/MacAppStore.provisionprofile",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist"
    }
    
  }
}