{
  "name": "celmouse",
  "version": "1.0.2",
  "main": "main.js",
  "license": "ISC",
  "description": "Control your PC from far away",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "watch": "tsc -w -p . ",
    "build": "tsc",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": {
    "name": "Marcelo Viana",
    "email": "marcelo.ita.boss@gmail.com",
    "url": "https://github.com/cl0v/"
  },
  "devDependencies": {
    "@types/ws": "^8.5.12",
    "electron": "^32.2.1",
    "electron-builder": "^25.1.7",
    "electron-notarize": "^1.2.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "dotenv": "^16.4.5",
    "electron-builder-notarize": "^1.5.2",
    "winston": "^3.15.0",
    "ws": "^8.18.0"
  },
  "build": {
    "asarUnpack": [
      "**/*.node"
    ],
    "productName": "CelMouse",
    "appId": "com.gyromouse.desktop",
    "copyright": "Copyright Â© 2024 Marcelo Viana",
    "afterSign": "electron-builder-notarize",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist"
    },
    "dmg": {
      "sign": false
    }
  }
}